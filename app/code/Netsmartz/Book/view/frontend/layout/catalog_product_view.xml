<?xml version="1.0"?>
    <page xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
           <body>
            <referenceContainer name="product.info.main">
                <block class="Magento\Catalog\Block\Product\View\Description" name="product.info.custom_attribute" template="Magento_Catalog::product/view/attribute.phtml" before="product.info.sku">
                    <arguments>
                        <argument name="at_call" xsi:type="string">getIsbn</argument>
                        <argument name="at_code" xsi:type="string">isbn</argument>
                        <argument name="css_class" xsi:type="string">isbn</argument>
                        <argument name="at_label" xsi:type="string">default</argument>
                        <argument name="add_attribute" xsi:type="string">itemprop="isbn"</argument>
                    </arguments>
                </block>
            </referenceContainer>
        </body>
</page>
